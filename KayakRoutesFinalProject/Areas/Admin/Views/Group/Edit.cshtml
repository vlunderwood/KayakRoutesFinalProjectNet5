@model GroupFloat
@{
    string title = ViewBag.Action + " Group";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Contact">Contact</label>
        <input asp-for="Contact" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control">
    </div>
    
    <div class="form-group">
        <label asp-for="StartPoint">StartPoint</label>
        <input asp-for="StartPoint" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="StopPoint">StopPoint</label>
        <input asp-for="StopPoint" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Time">Time</label>
        <input asp-for="Time" class="form-control">
    </div>

    <input type="hidden" asp-for="GroupId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Group" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>