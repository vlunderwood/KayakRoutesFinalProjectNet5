@model List<GroupFloat>
@{
    ViewBag.Title = "Group Floats";
}

<h2>Group Floats and Meet and Greets!</h2>
<a asp-controller="Group" asp-action="Add">Add New Float</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Contact</th>
            <th>Phone</th>
            <th>Location</th>
            <th>Start Point</th>
            <th>Stop Point</th>
            <th>Description</th>
            <th>Date</th>
            <th>Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var route in Model) {
        <tr>
            <td>@route.Contact</td>
            <td>@route.Phone</td>
            <td>@route.Location</td>
            <td>@route.StartPoint</td>
            <td>@route.StopPoint</td>
            <td>@route.Description</td>
            <td>@route.Date</td>
            <td>@route.Time</td>
            <td>
                <a asp-controller="Group" asp-action="Edit" asp-area="Admin"
                   asp-route-id="@route.GroupId"
                   asp-route-slug="@route.Slug"
                   class="btn btn-primary">Edit</a>
                <a asp-controller="Group" asp-action="Delete" asp-area="Admin"
                   asp-route-id="@route.GroupId"
                   asp-route-slug="@route.Slug"
                   class="btn btn-primary">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>